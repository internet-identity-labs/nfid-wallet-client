{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@nfid-frontend/ui": ["packages/ui/src/index.ts"],
      "@nfid-frontend/utils": ["packages/utils/src/index.ts"],
      "@nfid/client-db": ["packages/client-db/src/index.ts"],
      "@nfid/config": ["packages/config/src/index.ts"],
      "@nfid/integration": ["packages/integration/src/index.ts"],
      "@nfid/integration-ethereum": [
        "packages/integration-ethereum/src/index.ts"
      ],
      "@nfid/integration/token/*": ["packages/integration/src/lib/token/*"],
      "frontend/*": ["apps/nfid-frontend/src/*"],
      "src/*": ["apps/nfid-frontend/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
