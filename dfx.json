{
  "canisters": {
    "nfid-frontend": {
      "frontend": {
        "entrypoint": "build/index.html"
      },
      "source": ["build/"],
      "build": "npx nx run nfid-frontend:build",
      "type": "assets"
    },
    "nfid-demo": {
      "frontend": {
        "entrypoint": "dist/apps/nfid-demo/index.html"
      },
      "source": ["dist/apps/nfid-demo/"],
      "build": "npx nx run nfid-demo:build:staging",
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://mainnet.dfinity.network"],
      "type": "persistent"
    },
    "dev": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  },
  "version": 1
}
