{
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "test": {
      "cache": true
    }
  },
  "namedInputs": {
    "default": [
      "{workspaceRoot}/config/*",
      "{projectRoot}/**/*",
      "sharedGlobals",
      {
        "env": "NFID_PROVIDER_URL"
      },
      {
        "env": "VAULTS_ORIGIN"
      },
      {
        "env": "FRONTEND_MODE"
      },
      {
        "env": "BACKEND_MODE"
      },
      {
        "env": "II_MODE"
      },
      {
        "env": "IC_HOST"
      },
      {
        "env": "ETHERSCAN_API_KEY"
      },
      {
        "env": "GOERLI_ALCHEMY_API_KEY"
      },
      {
        "env": "RARIBLE_X_API_KEY"
      },
      {
        "env": "PROD_RARIBLE_X_API_KEY"
      },
      {
        "env": "ETH_ALCHEMY_API_KEY"
      },
      {
        "env": "BLOCK_CYPHER_TOKEN"
      },
      {
        "env": "MATIC_ALCHEMY_API_KEY"
      },
      {
        "env": "MUMBAI_ALCHEMY_API_KEY"
      },
      {
        "env": "RAMP_WALLET_API_KEY"
      },
      {
        "env": "REACT_APP_SENTRY_CONNECTION"
      },
      {
        "env": "IDENTITY_MANAGER_CANISTER_ID_PRODUCTION"
      },
      {
        "env": "PUB_SUB_CHANNEL_CANISTER_ID_PRODUCTION"
      },
      {
        "env": "VERIFIER_CANISTER_ID_PRODUCTION"
      },
      {
        "env": "INTERNET_IDENTITY_CANISTER_ID_PRODUCTION"
      },
      {
        "env": "AWS_VERIFY_PHONENUMBER"
      },
      {
        "env": "AWS_SIGNIN_GOOGLE"
